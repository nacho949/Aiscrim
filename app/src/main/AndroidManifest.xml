<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aiscrim.application">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/Theme.RicoPaRico">
        <activity
            android:name=".Usuario.ActividadPrincipal"
            android:configChanges="screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@style/Theme.ConNavigationDrawer" />
        <activity
            android:name=".Administrador.ActividadPrincipalAdmin"
            android:configChanges="screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@style/Theme.ConNavigationDrawer" />
        <activity android:name=".Usuario.SeleccinVideojuego" />
        <activity
            android:name=".Login.LoginActivity"
            android:configChanges="screenSize|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Usuario.CestaCompraActivity" />
        <activity android:name=".Usuario.CambiarPasswordActivity" />
        <activity android:name=".Usuario.TramitarPedido" />
        <activity android:name=".Usuario.SeleccionPedido" />
        <activity android:name=".Login.Registro"></activity>
    </application>

</manifest>
